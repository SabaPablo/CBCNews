<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/custom_background"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_news_iv"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:contentDescription="@string/non_internet_image"
            android:src="@drawable/no_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:elevation="1dp"
            android:text="Titulo"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/image_news_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="19h"
            app:layout_constraintStart_toEndOf="@+id/image_news_iv"
            app:layout_constraintTop_toBottomOf="@+id/title_tv" />

        <TextView
            android:id="@+id/place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Escenario Plais d'abraham"
            app:layout_constraintStart_toEndOf="@+id/image_news_iv"
            app:layout_constraintTop_toBottomOf="@+id/time_tv" />

        <ImageView
            android:id="@+id/let_know_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/non_internet_image"
            android:src="@drawable/ic_baseline_notification_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/grey" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>